{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier",
        "react-hooks"
    ],
    "rules": {
        "import/prefer-default-export": 0,
        "prettier/prettier": "error",
        "react/jsx-filename-extension": 0,
        "react/style-prop-object": [0, {
            "allow": ["string"]
          }]
    }
}
